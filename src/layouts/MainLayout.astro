<style>
  html {
    box-sizing: border-box;
  }
  body {
    font-family: Georgia, serif;
    font-size: 18px;
    margin: 0;
    padding: 0;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  nav .nav-item {
    margin: 30px 10px;
    width: 130px;
    height: 130px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition:
      transform 1s ease,
      box-shadow 0.3s ease;
  }
  nav .nav-item:hover {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
  }
  nav .nav-item.ni-1 {
    background-color: #cdb49a;
  }
  nav .nav-item.ni-1:hover {
    box-shadow: 0 0 15px #cdb49a;
  }
  nav .nav-item.na-2 {
    background-color: #a87c4f;
  }
  nav .nav-item.na-2:hover {
    box-shadow: 0 0 15px #a87c4f;
  }
  nav .nav-item.na-3 {
    background-color: #834504;
  }
  nav .nav-item.na-3:hover {
    box-shadow: 0 0 15px #834504;
  }
  nav .nav-item.na-4 {
    background-color: #683703;
  }
  nav .nav-item.na-4:hover {
    box-shadow: 0 0 15px #683703;
  }
  .nav-item a {
    text-decoration: none;
    color: white;
    font-size: 18px;
    font-weight: bold;
  }
  .nav-item a:hover {
    color: #412202;
  }

  h1,
  h2,
  h3,
  h4 {
    color: #412202;
  }
  footer {
    background-color: #412202;
    color: white;
    padding: 40px 20px 20px;
  }

  .footer-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 40px;
    margin-bottom: 30px;
  }

  .footer-section h3 {
    color: #cdb49a;
    margin-bottom: 20px;
    font-size: 1.2rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section ul li {
    margin-bottom: 10px;
  }

  .footer-section a {
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-section a:hover {
    color: #cdb49a;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .social-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: #cdb49a;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 20px;
    border-top: 1px solid #683703;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-links {
    display: flex;
    gap: 20px;
  }

  .footer-links a {
    color: #cdb49a;
    text-decoration: none;
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
  }

  /*  Resolució mòbil */
  @media (max-width: 768px) {
    body {
    }
    nav .nav-item {
      height: 85px;
      width: 85px;
      margin: 30px 3px;
    }
    .nav-item a {
      font-size: 12px;
    }
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 30px;
      justify-content: center;
      align-items: center;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 15px;
      justify-content: center;
      align-items: center;
    }
    .footer-section {
      text-align: center;
      justify-self: center;
    }
  }
</style>
