---
interface Props {
  nom: string;
  fabricacio: string;
  descripcio: string;
  imatge: string;
  estat: string;
}

const { nom, fabricacio, descripcio, imatge, estat } = Astro.props;
---

<article class="violin-card">
  <div class="rodona">
    <img src={imatge} alt={nom} />
  </div>
  <div class="violin-info">
    <h2>{nom}</h2>
    <div class="info-container">
      <p class="descripcio">{descripcio}</p>
      <div class="especificacions">
        <p class="fabricacio">
          Fabricaci√≥:<strong><span class="estat"> {fabricacio}</span></strong>
        </p>
        <p class="fabricacio">
          Estat:<strong><span class="estat"> {estat} </span></strong>
        </p>
      </div>
    </div>
  </div>
</article>

<style>
  .violin-card {
    border-radius: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin: 30px 0px;
  }
  .info-container {
  }
  .especificacions {
  }

  .descripcio {
    color: #1a0d00;
    grid-column: 1 / 3;
    text-align: justify;
  }

  .rodona {
    width: 300px;
    height: 300px;
    padding: 20px;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 5px solid #a87c4f;
    justify-self: center;
  }

  .rodona img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }


  h2 {
    color: #a87c4f;
    font-size: 1.5rem;
  }

  .fabricacio {
    color: #a87c4f;
  }

  .estat {
    color: #412202;
    font-weight: bold;
  }

  @keyframes fadeUp {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  .violin-card {
    opacity: 0; /* estat inicial en cas que el navegador no suporti scroll-timeline */
    animation-name: fadeUp;
    animation-duration: 0.5s;
    animation-fill-mode: both;
    animation-timing-function: ease-out;
  }

  /* Ara, crea una scroll timeline per cada element */
  .violin-card {
    animation-timeline: view();
    animation-range: entry 0% cover 40%;
  }

  @media (max-width: 767px) {
    .violin-card {
      grid-template-columns: 1fr;
      align-items: center;
      justify-content: center;
    }

    .rodona {
      width: 200px;
      height: 200px;
      align-self: center;
      justify-self: center;
    }

  }
</style>
